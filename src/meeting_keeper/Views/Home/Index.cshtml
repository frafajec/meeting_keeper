@{
    ViewData["Title"] = "Home Page";
}

    <!-- Header -->
<a name="about"></a>
<div class="intro-header">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <h1 class="logoFont">Business Keeper</h1>
                    <h3>Keep your business in one place. <br /> Manage all your contacts, meetings and reminders on simple interface.</h3>
                    <hr class="intro-divider">
                    <ul class="list-inline intro-social-buttons">
                        <li>
                            <a asp-controller="Home" asp-action="Subscribe" class="btn btn-default btn-lg btn-custom"><span class="network-name">Learn more</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.intro-header -->
<!-- Page Content -->

<a name="services"></a>
<div class="content-section-a">

    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-sm-6">
                <hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">Services that we provide</h2>
                <p class="lead">Select the option which best fits your business needs. Visit the page and become a member. If you need any further assistance feel fre to <a href="/Home/Contact">contact us</a>.</p>
                <p><a class="btn btn-default btn-lg btn-custom" href="/Home/Subscribe"><span class="network-name">More</span></a></p>
            </div>
            <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                <img class="img-responsive" src="~/images/Home/services.png" alt="" style="max-width:300px;">
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.content-section-a -->

<div class="content-section-b">

    <div class="container">

        <div class="row">
            <div class="col-lg-5 col-lg-offset-1 col-sm-push-6  col-sm-6">
                <hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">About us</h2>
                <p class="lead">The team consists of three enthusiastic Computer Science Master's students, which are studying at Graz University of Technology!</p>
                <p><a class="btn btn-default btn-lg btn-custom" href="/Home/About"><span class="network-name">More</span></a></p>
            </div>
            <div class="col-lg-5 col-sm-pull-6  col-sm-6">
                <img class="img-responsive" src="~/images/Home/about.png" alt="" style="max-width:300px;">
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.content-section-b -->

<div class="content-section-a">

    <div class="container">

        <div class="row">
            <div class="col-lg-5 col-sm-6">
                <hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">Let's Get In Touch!</h2>
                <p class="lead">Ready to start your next project with us? That's great! Give us a call or send us an email and we will get back to you as soon as possible!</p>
                <p><a class="btn btn-default btn-lg btn-custom" href="/Home/Contact"><span class="network-name">More</span></a></p>
            </div>
            <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                <img class="img-responsive" src="~/images/Home/contact.png" alt="" style="max-width:300px;">
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.content-section-a -->